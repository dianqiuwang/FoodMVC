@model int
@{ 
    ViewBag.Title = "404 Error";
}

<div class="alert alert-danger mt-1 mb-1">
    <h4>404 Not Found Error :</h4>
    <hr />
    <h5>
        Restaurant with Id:@Model cannot be found
    </h5>
</div>
<a asp-action="Index" asp-controller="Restaurant" class="btn btn-primary">
    See All Restaurants
</a>